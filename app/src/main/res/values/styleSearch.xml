<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="TextStyleSearch">
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textColor">@color/black_text_search</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColorHint">@color/textSearch</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
    </style>
    <style name="IconSearch">
        <item name="android:layout_width">@dimen/margin_top</item>
        <item name="android:layout_height">@dimen/margin_bottom</item>
        <item name="android:layout_marginStart">@dimen/button_icon_size_button</item>
        <item name="android:layout_marginEnd">@dimen/margin_end_icon</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>
    <style name="error_placholder_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:orientation">vertical</item>
    </style>
    <style name="error_internet_image_style">
        <item name="android:layout_marginTop">@dimen/layout_margin_top_horizontal</item>
        <item name="android:layout_width">120dp</item>
        <item name="android:layout_height">120dp</item>
        <item name="android:layout_gravity">center</item>
    </style>
    <style name="error_internet_text_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginHorizontal">24dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:textSize">19sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>
    <style name="refresh_button_style">
        <item name="android:layout_width">91dp</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:background">@drawable/oval_shape</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:layout_marginTop">24dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="error_search_image_style">
        <item name="android:layout_marginTop">@dimen/layout_margin_top_horizontal</item>
        <item name="android:layout_width">120dp</item>
        <item name="android:layout_height">120dp</item>
        <item name="android:layout_gravity">center</item>
    </style>
    <style name="error_search_text_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginHorizontal">24dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:textSize">19sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>
</resources>